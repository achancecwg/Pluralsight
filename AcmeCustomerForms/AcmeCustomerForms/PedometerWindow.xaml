<Window x:Class="AcmeCustomerForms.PedometerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcmeCustomerForms"
        mc:Ignorable="d"
        Title="PedometerWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="GoalLabel" Content="Enter your Step Goal:" HorizontalAlignment="Left" Margin="45,61,0,0" VerticalAlignment="Top"/>
        <Label x:Name="StepLabel" Content="Enter your steps for Today:" HorizontalAlignment="Left" Margin="15,107,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="GoalTextBox" HorizontalAlignment="Left" Height="23" Margin="166,64,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="StepsTextBox" HorizontalAlignment="Left" Height="23" Margin="166,107,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Calculate" Content="Calculate" HorizontalAlignment="Center" Margin="124,171,0,0" VerticalAlignment="Top" Width="75" Click="Calculate_Click"/>
        <Label x:Name="ResultLabel" Content="" HorizontalAlignment="Center" Margin="128,215,0,0" VerticalAlignment="Center" FontSize="18.667" FontWeight="Bold"/>

    </Grid>
</Window>
